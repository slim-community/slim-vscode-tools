{
  "name": "slim-vscode-tools",
  "displayName": "slim-tools",
  "description": "language extension for the SLiM simulation package",
  "version": "0.0.5",
  "icon": "slim_icon.png",
  "publisher": "andrewkern",
  "repository": {
    "type": "git",
    "url": "https://github.com/slim-community/slim-tools.git"
  },
  "bugs": {
    "url": "https://github.com/slim-community/slim-tools/issues"
  },
  "homepage": "https://github.com/slim-community/slim-tools",
  "main": "index.js",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:slim",
    "onCustomEditor:slimdoc"
  ],
  "contributes": {
    "languages": [
      {
        "id": "slim",
        "aliases": [
          "SLiM",
          "slim"
        ],
        "extensions": [
          ".slim"
        ],
        "firstLine": "^#!.*\\bslim\\b",

        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "slim",
        "scopeName": "source.slim",
        "path": "./syntaxes/slim.tmLanguage.json"
      }
    ],
    "mappedLanguages": {
      "slim": "slim"
    },
    "snippets": [
      {
        "language": "slim",
        "path": "./snippets/slim.json"
      }
    ],
    "configuration": {
      "title": "SLiM Simulator",
      "properties": {
        "slimTools.slimInterpreterPath": {
          "type": "string",
          "default": "slim",
          "description": "Path to the SLiM interpreter (e.g., /usr/local/bin/slim or C:\\\\Users\\\\YourName\\\\slim.exe)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slimTools",
          "title": "SLiM",
          "icon": "media/SLiM_vector.png"
        }
      ]
    },
    "views": {
      "slimTools": [
        {
          "id": "slimCommandsView",
          "name": "SLiM Commands"
        },
        {
          "id": "docTreeView",
          "name": "Documentation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ --watch",
    "clean": "rimraf out dist coverage && npm cache clean --force",
    "prepublish": "npm run compile",
    "package": "vsce package",
    "prepublishOnly": "rimraf out dist coverage node_modules && npm cache clean --force"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.96.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "tmp": "^0.2.3",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
